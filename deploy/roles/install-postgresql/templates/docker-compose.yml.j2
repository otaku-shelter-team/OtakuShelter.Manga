version: "3.1"
services:  
  {{ postgresql_service }}:
    image: postgres:11.1-alpine
    restart: always
    ports:
      - "5432:5432"
    volumes:
      - {{ postgresql_path}}/{{ postgresql_data }}:/var/lib/postgresql/data/{{ postgresql_service }}
    environment:
      PGDATA: /var/lib/postgresql/data/{{ postgresql_service }}
      POSTGRES_DB: {{ postgresql_database }}
      POSTGRES_USER: {{ postgresql_username }}
      POSTGRES_PASSWORD: {{ postgresql_password }}
